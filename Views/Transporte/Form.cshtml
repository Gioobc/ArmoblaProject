@model ArmoblaProject.Models.Transporte

@{
    bool esEdicion = ViewData["Title"]?.ToString()?.Contains("Editar") ?? false;
    string accion = esEdicion ? "Edit" : "Create";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="@accion">
    @if (esEdicion)
    {
        <input type="hidden" asp-for="Id" />
    }
    else
    {
        <div class="form-group">
            <label asp-for="Id" class="control-label">ID</label>
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
    }

    <div class="form-group">
        <label asp-for="Costo" class="control-label">Costo</label>
        <input asp-for="Costo" class="form-control" />
        <span asp-validation-for="Costo" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="YTR" class="form-check-input" />
        <label asp-for="YTR" class="form-check-label">¿Seleccionado?</label>
        <span asp-validation-for="YTR" class="text-danger"></span>
    </div>

    <br />
    <button type="submit" class="btn @(esEdicion ? "btn-primary" : "btn-success")">
        @(esEdicion ? "Actualizar" : "Guardar")
    </button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

<div class="mt-4">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
        Regresar a Inicio
    </a>
</div>
