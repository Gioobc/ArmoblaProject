<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Armobla</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4">
            <a class="navbar-brand" href="/">Armobla</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Empresa">Empresa</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Almacen" asp-action="Index">Almacenes</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Taller" asp-action="Index">Talleres</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Transporte" asp-action="Index">Transportes</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Lingo" asp-action="Run">Evaluación</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Catalogo" asp-action="Muebles">Catálogo</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="text-center bg-light py-3">
        <small>&copy; @DateTime.Now.Year - Armobla Hogar & Empresas</small>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
