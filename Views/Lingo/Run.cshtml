<h2>@ViewData["Title"]</h2>

<div class="mb-3">
    <form asp-action="Run" method="post">
        <button type="submit" class="btn btn-warning">Abrir LINGO (.lg4)</button>
    </form>
</div>

<div class="mb-3">
    <form asp-action="LeerResultado" method="post">
        <button type="submit" class="btn btn-success">Leer Resultado</button>
    </form>
</div>

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-info">@ViewBag.Mensaje</div>
}

@if (ViewBag.Resultado != null)
{
    <h4>Resultado desde LINGO:</h4>
    <pre style="background-color: #f8f9fa; padding: 15px; border: 1px solid #ccc;">
    @ViewBag.Resultado
        </pre>
}

<div class="mt-4">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
        Regresar a Inicio
    </a>
</div>
